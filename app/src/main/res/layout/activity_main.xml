<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363B49"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/re1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="Resume"
            android:textColor="#0EE4E4"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/per1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Personal Details"
            android:textColor="#5adbb5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/na1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Name"
                android:inputType="text"
                android:textColor="#7EB6BF"
                android:textSize="10dp"
                android:textStyle="bold">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ad1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Address"
                android:inputType="text"
                android:textColor="#7EB6BF"
                android:textSize="10dp"
                android:textStyle="bold">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bi1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Birth Date"
                android:inputType="date"
                android:textColor="#7EB6BF"
                android:textSize="10dp"
                android:textStyle="bold">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/em1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="E-Mail Id"
                android:inputType="text"
                android:textColor="#7EB6BF"
                android:textSize="10dp"
                android:textStyle="bold">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/co1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Contect Number"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#7EB6BF"
                android:inputType="number">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <TextView
            android:id="@+id/ed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Education Details"
            android:textColor="#5adbb5"
            android:textSize="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/de1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Degree"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#A471EC"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/col1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="College/School/Uni"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#A471EC"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pas1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Passing Year"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#A471EC"
                android:inputType="number">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sc1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Score"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#A471EC"
                android:inputType="number">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <TextView
            android:id="@+id/hob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Hobby Details"
            android:textColor="#5adbb5"
            android:textSize="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hob1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Hobby1"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#8798FB"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hob2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Hobby2"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#8798FB"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hob3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Hobby3"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#8798FB"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>

        <TextView
            android:id="@+id/ski"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="Skill Details"
            android:layout_marginTop="20dp"
            android:textColor="#5adbb5"
            android:textSize="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ski1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Skill 1"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#C3F33A"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ski2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Skill 2"
                android:inputType="text"
                android:textColor="#C3F33A"
                android:textSize="10dp"
                android:textStyle="bold">

            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ski3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Skill 3"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#C3F33A"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <TextView
            android:id="@+id/obj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Objectiv Details"
            android:textColor="#5adbb5"
            android:textSize="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/obj1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Objectiv Details1"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="#DD894B"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>

        </LinearLayout>
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Gender Details"
            android:textColor="#5adbb5"
            android:textSize="20dp"
            android:textStyle="bold" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#43DF84"/>
            <RadioButton
                android:id="@+id/female1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#43DF84"/>
            <RadioButton
                android:id="@+id/other1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textStyle="italic"
                android:textSize="20dp"
                android:textColor="#43DF84"/>
        </RadioGroup>
        <Button
            android:id="@+id/btnsumbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Sumbit"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:backgroundTint="#5adbb5">
        </Button>
    </LinearLayout>
</ScrollView>
